class Animal:
    def __init__(self, name, age):
        self.name = name
        self.age = age

    def sound(self):
        return "UNKNOWN SOUND!"

    def __repr__(self):
        return f"{self.__class__.__name__}(name={self.name}, age={self.age})"


class Dog(Animal):
    def __init__(self, name, age, color):
        super().__init__(name, age)
        self.color = color

    def sound(self):
        return "LAFLAFLAF"


a = Animal("Unknown", 0)
sharo = Dog("Sharo", 12, "brown")

print(a.sound())
print(sharo.sound())

print(sharo)
print(a)
